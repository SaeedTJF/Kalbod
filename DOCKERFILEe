# Dockerfile
FROM node:18-alpine AS build

WORKDIR /app

COPY package*.json ./

RUN npm install --silent

COPY . .

# اضافه کردن متغیر محیطی
ENV NEXT_PUBLIC_BASE_URL=http://10.35.44.104:8080

RUN npm run build

FROM node:18-alpine

WORKDIR /app

COPY --from=build /app /app

RUN npm ci --only=production --silent

EXPOSE 3000

CMD ["npm", "run", "start"]
